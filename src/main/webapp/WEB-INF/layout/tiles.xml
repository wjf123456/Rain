<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="base" template="/WEB-INF/layout/page.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>

    <definition name="add" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/add.jsp" />
    </definition>

    <definition name="select" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/select.jsp" />
    </definition>

    <definition name="del" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/del.jsp" />
    </definition>

</tiles-definitions>